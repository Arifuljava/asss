<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#fff"
    android:id="@+id/firstlay"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/space_5dp"
    android:layout_marginTop="@dimen/space_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view8"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#44546a"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="10dp"

            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/dailyCheckCard"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:text="ক্যালকুলেটর"

                    android:textColor="@color/white"
                    >



                </TextView>
                <TextView
                    android:id="@+id/taskCard"
                    android:layout_width="0dp"
                    android:visibility="visible"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="বাকি"
                    android:textColor="#CD9B51"

                    android:foreground="?attr/selectableItemBackground"
                    >



                </TextView>
                <TextView
                    android:id="@+id/taskCard6"

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="কিস্তি গ্রহণ"
                    android:textColor="#C38326"

                    android:foreground="?attr/selectableItemBackground"
                    >



                </TextView>


            </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/idsecondlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"

                android:layout_height="30dp"
                android:background="@drawable/blackbus"
                android:layout_weight="1"

                android:layout_marginRight="10dp"
                android:clickable="true"
                android:id="@+id/namee"
                android:text="name"
                android:textAllCaps="false"

                android:textColor="#fff"
                >



            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"
                android:onClick="add_balance"
                android:layout_height="30dp"
                android:background="@drawable/blackbus"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="নাম"

                android:textColor="@color/white"
                >



            </Button>
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/jomafirst"
                android:layout_width="0dp"
                android:visibility="visible"
                android:background="@drawable/blackbus"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="২০০০ টাকা"
                android:layout_weight="1"

                android:foreground="?attr/selectableItemBackground"
                >



            </Button>



        </LinearLayout>
        ///2
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"
                android:onClick="add_balance"
                android:layout_height="30dp"
                android:background="@drawable/blackbus"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="ফোন নম্বর"

                android:textColor="@color/white"
                >



            </Button>
            <Button
                android:layout_marginLeft="20dp"

                android:layout_width="0dp"
                android:visibility="visible"
                android:background="@drawable/blackbus"
                android:layout_height="30dp"
                android:id="@+id/kinadam"
                android:textColor="@color/white"
                android:text="৪০টি"
                android:layout_weight="1"

                android:foreground="?attr/selectableItemBackground"
                >



            </Button>



        </LinearLayout>
        //3
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/blackbus"
                android:clickable="true"
                android:onClick="add_balance"
                android:text="জমা"

                android:textColor="@color/white">


            </Button>

            <Button
                android:id="@+id/lastkisti"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/blackbus"
                android:foreground="?attr/selectableItemBackground"
                android:text="২০০০ টাকা"
                android:textColor="@color/white"

                android:visibility="visible">


            </Button>



        </LinearLayout>
        //5
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"
                android:onClick="add_balance"
                android:layout_height="30dp"
                android:background="@drawable/blackbus"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:text="বাকি"

                android:textColor="@color/white"
                >



            </Button>
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/bakikisti"
                android:layout_width="0dp"
                android:visibility="visible"
                android:background="@drawable/blackbus"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:text="২০০০ টাকা"
                android:layout_weight="1"

                android:foreground="?attr/selectableItemBackground"
                >



            </Button>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:layout_width="0dp"

                android:layout_height="30dp"
                android:background="@drawable/blackbus"
                android:layout_weight="1"

                android:layout_marginRight="10dp"
                android:clickable="true"
                android:id="@+id/datetarik"
                android:text="১০/৩/২০২২ – ২০/০৩/২০২২"

                android:textColor="#ECEC2E"
                >



            </Button>
        </LinearLayout>
        //

    </LinearLayout>

</LinearLayout>