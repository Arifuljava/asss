<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"

    tools:context=".Memo_NoteCreate">
    <RelativeLayout

        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_background"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:visibility="visible"

                        android:layout_width="0dp"

                        android:layout_height="50dp"
                        android:background="@drawable/allbus"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:text="নোট"
                        android:onClick="addnote"

                        android:textColor="@color/white"
                        >



                    </Button>
                    <Button

                        android:layout_width="0dp"
                        android:visibility="invisible"

                        android:layout_height="50dp"
                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        >



                    </Button>
                    <Button
                        android:id="@+id/taskCard61"
                        android:onClick="newview"

                        android:layout_width="0dp"
                        android:background="@drawable/ww"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="ভিউ"
                        android:textColor="@color/white"

                        android:foreground="?attr/selectableItemBackground"
                        >



                    </Button>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/main_constraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <EditText
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"

                    android:id="@+id/somitiname"

                    android:hint="কোম্পানির নাম"
                    android:background="@drawable/border"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ></EditText>

                <EditText
                    android:textAlignment="center"
                    android:id="@+id/fatherba"
                    android:layout_marginTop="10dp"


                    android:hint="পণ্যের নাম"
                    android:background="@drawable/border"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ></EditText>
                //5

                //6
                <EditText
                    android:textAlignment="center"
                    android:id="@+id/mother"
                    android:layout_marginTop="10dp"

                    android:hint="দাম"
                    android:background="@drawable/border"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ></EditText>
                //7

                //8

                //9

                <EditText
                    android:id="@+id/p_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:background="@drawable/border"
                    android:hint="কত পিস"
                    android:inputType="textMultiLine"
                    android:minHeight="50dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15dp"></EditText>

                <EditText
                    android:textAlignment="center"
                    android:id="@+id/votar"
                    android:layout_marginTop="10dp"


                    android:hint="পণ্যের বিস্তারিত"
                    android:background="@drawable/border"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ></EditText>

                //15
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/dailyCheckCard"
                            android:layout_width="0dp"

                            android:layout_height="50dp"
                            android:background="@drawable/allbus"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:text="পণ্যটি যোগ করুন"

                            android:textColor="@color/white"
                            >



                        </Button>
                        <Button
                            android:id="@+id/taskCard"
                            android:layout_width="0dp"
                            android:visibility="invisible"

                            android:layout_height="50dp"
                            android:layout_weight="1"

                            android:foreground="?attr/selectableItemBackground"
                            >



                        </Button>
                        <Button
                            android:id="@+id/taskCard6"

                            android:layout_width="0dp"
                            android:background="@drawable/ww"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="মেয়াদোত্তীর্ণ পণ্যের"
                            android:textColor="@color/white"

                            android:foreground="?attr/selectableItemBackground"
                            >



                        </Button>


                    </LinearLayout>

                </LinearLayout>

                //




                //16
                <EditText
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:id="@+id/sikar"
                    android:layout_marginTop="10dp"




                    android:enabled="false"


                    android:background="@drawable/border"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:layout_marginRight="@dimen/space_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    ></EditText>
                //17

                <Button
                    android:minWidth="250dp"


                    android:id="@+id/cirLoginButton"
                    style="@style/loginButton"

                    android:text="প্রত্যাবর্তনের সময় লিখুন "
                    android:background="@drawable/gradient_background"
                    android:layout_marginBottom="250dp"
                    android:textAllCaps="true"

                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
